{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2015.core",
      "es2017",
      "dom"
    ],
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "lodash-es",
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}